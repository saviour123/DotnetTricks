using System;

namespace RectangleApplication
{
    class Rectangle {
        // member variables
        double length;
        double width;

        public void Accepdetails(){
            length = 4.5;
            width = 3.4;
        }

        public double GetArea(){
            return length * width;
        }

        public void Display(){
            Console.WriteLine("leng: {0}", length);
            Console.WriteLine("width: {0}", width);
            Console.WriteLine("area: {0}", GetArea());
        }
    }
    class Program
    {
        static void Main(string[] args)
        {
            Rectangle rectangle = new Rectangle();
            rectangle.Accepdetails();
            rectangle.Display();
            Console.ReadLine();
        }
    }
}
